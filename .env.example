# LabGPT Environment Variables
# Copy this file to .env and fill in your actual values

# Hugging Face Token (required for model downloads)
HF_TOKEN=your_huggingface_token_here

# API Keys for Data Generation (optional, for API mode)
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# GPU Configuration (optional)
# Set to empty string "" to disable GPU, or specify GPU IDs like "0,1"
CUDA_VISIBLE_DEVICES=0

# RAG Storage Directory (optional, defaults to rag_demo_storage)
# RAG_STORAGE_DIR=./indices/rag_demo_storage